{
  "name": "auth",
  "version": "0.0.1",
  "main": "handler.js",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp -r src/!(*.ts) dist/ 2>/dev/null || true",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "eslint './src/**/*.{js,ts}' --fix",
    "lint-staged": "lint-staged",
    "test": "yarn lint && jest --coverage",
    "test:watch": "yarn lint && jest --watchAll",
    "clean": "rm -rf coverage"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/http-errors": "^2",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4",
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-util": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@360mediadirect/auth-helper": "^1.0.0",
    "@360mediadirect/log": "^1.1.1",
    "@360mediadirect/modeler": "^1.0.0",
    "@360mediadirect/restler": "^1.0.0",
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@aws/dynamodb-data-marshaller": "^0.7.3",
    "@aws/dynamodb-expressions": "^0.7.3",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "http-errors": "^2.0.1",
    "lodash": "^4.17.21"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.spec.{js,ts}?(x)"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleNameMapper": {
      "^@360mediadirect/restler$": "<rootDir>/../../packages/restler/src/index.ts",
      "^@360mediadirect/auth-helper$": "<rootDir>/../../packages/auth-helper/src/index.ts"
    },
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ]
  }
}
