{
  "name": "@360mediadirect/modeler",
  "version": "1.0.0",
  "description": "DynamoDB model access library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Tom Shawver <tom@360mediadirect.com>",
  "license": "ISC",
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "eslint './src/**/*.{js,ts}' --fix",
    "lint-staged": "lint-staged",
    "test": "yarn lint && jest --coverage",
    "test:watch": "yarn lint && jest --watchAll",
    "clean": "rm -rf coverage dist"
  },
  "files": [
    "./dist/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --resolve-plugins-relative-to ."
    ],
    "*.{md,json}": [
      "prettier -l --write"
    ]
  },
  "dependencies": {
    "@aws/dynamodb-auto-marshaller": "^0.7.1",
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "aws-sdk": "^2.1692.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4",
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.spec.{js,ts}?(x)"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
