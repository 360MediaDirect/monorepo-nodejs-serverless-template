{
  "name": "@360mediadirect/restler",
  "version": "1.0.0",
  "description": "RESTify controllers in services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Tom Shawver <tom@360mediadirect.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "eslint './src/**/*.{js,ts}' --fix",
    "lint-staged": "lint-staged",
    "test": "yarn lint && jest --coverage",
    "test:watch": "yarn lint && jest --watchAll",
    "clean": "rm -rf node_modules dist"
  },
  "files": [
    "./dist/*"
  ],
  "dependencies": {
    "@360mediadirect/log": "^1.1.1",
    "@codegenie/serverless-express": "^4.17.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "embassy": "^2.0.4",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.5.8",
    "http-errors": "^2.0.0",
    "qs": "^6.14.0",
    "shortid": "^2.2.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@types/aws-sdk": "^2.7.4",
    "@types/express": "^5.0.3",
    "@types/http-errors": "^2",
    "@types/lodash": "^4",
    "@types/node": "^22.0.0",
    "@types/qs": "^6",
    "@types/shortid": "^2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.spec.{js,ts}?(x)"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
