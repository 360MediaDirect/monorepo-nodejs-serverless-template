{
  "name": "@360mediadirect/restler",
  "version": "1.0.0",
  "description": "RESTify controllers in services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Tom Shawver <tom@360mediadirect.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "eslint './src/**/*.{js,ts}' --fix",
    "lint-staged": "lint-staged",
    "test": "yarn lint && jest --coverage",
    "test:watch": "yarn lint && jest --watchAll",
    "clean": "rm -rf coverage dist"
  },
  "files": [
    "./dist/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --resolve-plugins-relative-to ."
    ],
    "*.{md,json}": [
      "prettier -l --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/express": "^5",
    "@types/http-errors": "^2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.2",
    "@types/qs": "^6",
    "@types/shortid": "^2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@360mediadirect/auth-helper": "^1.0.0",
    "@360mediadirect/log": "^1.1.1",
    "@codegenie/serverless-express": "^4.17.1",
    "aws-lambda": "^1.0.7",
    "embassy": "^2.0.4",
    "express": "^5.2.1",
    "express-openapi-validator": "^5.6.0",
    "http-errors": "^2.0.1",
    "qs": "^6.14.0",
    "shortid": "^2.2.17"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.spec.{js,ts}?(x)"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
